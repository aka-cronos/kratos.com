footer
  padding-top 2.5rem
  padding-bottom 2.5rem

.footerNav
  wrapped()
  display flex
  align-items center
  justify-content space-between
  
  +below($tablet)
    flex-direction column
  
  &-item
    margin-right 2rem
    margin-left 2rem
    text-decoration none
    color $dark-grey
    font-weight 600
    
    +below($tablet)
      display block
      text-align center
      font-size 1.25rem
      margin-bottom 1rem
    
.footer-tel
  position relative
  font-size 1.5rem
  color $grey
  
  &:before
    position absolute
    top 5px
    left -40px
    content url('/img/icon-tel.png')
    
.legals
  padding-top .5rem
  width 100%
  font-weight 600
  font-size .8rem
  text-align center
  color $light-grey
  border-top 1px solid rgba($light-grey, .5)
  
  +below($desktop)
    wrapped(90%)
  
  a
    color inherit
    text-decoration none
