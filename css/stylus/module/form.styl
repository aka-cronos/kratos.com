.form
  clear fix
  margin-top 4rem

.formItem
  lost-column 1/3 3
  clear fix
  margin-bottom 1rem
  
  +below($tablet)
    lost-column 1
  
.formSubject
.formMessage
  clear fix
  margin-bottom 1rem
  width 100%
  
.formItem-input
  width 100%
  padding .5rem
  border 0
  border-radius 4px
  appearance none
  color $grey
  background-color $soft-grey

  &::placeholder
    transform translateY(-5px)
    position relative
    font-size 13px
    color $light-grey
    font-style italic
  
  &.has-error
    border 1px solid $yellow
    
.error-validation
  float left
  font-weight bold
  font-size .825rem
  color $dark-grey