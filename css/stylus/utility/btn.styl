.btn
  position relative
  display inline-block
  padding .5rem 2rem
  border 0
  color white
  text-align center
  text-transform uppercase
  text-decoration none
  font-size .75rem
  font-weight 700
  background-color $yellow
  transition 350ms all ease-in-out
  
  &__translate
    transform translateX(-15px)
  
  &:hover
    background-color $dark-grey
  
  &:before
    position absolute
    top 0
    right -30px
    display block
    content ''
    background-color $dark-grey
    width 30px
    height 100%
    
  &:after
    position absolute
    top -3px
    right -32px
    transform scale(.5)
    display block
    content url('/img/right-arrow__yellow.png')