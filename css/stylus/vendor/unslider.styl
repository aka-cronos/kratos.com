.unslider
  position relative
  margin 0
  padding 0

.unslider-wrap
  position relative
  overflow auto
  height 100%

.unslider-wrap.unslider-carousel>li
  position relative
  float left
  height 100%
  
  & img
    display block
    width 100%

.unslider li
.unslider ol
.unslider ul
  margin 0
  padding 0
  border 0
  list-style none

// slides dots
.unslider-nav
  position absolute
  top 60%
  transform translateY(-50%)
  right 6rem

  & ol
    list-style none

    & li
      display block
      margin-bottom 1rem
      width 10px
      height 10px
      border-radius 50%
      background white
      text-indent -999em
      cursor pointer
      
      &last-child
        margin-bottom 0

      &.unslider-active
        background-color $yellow
        cursor default