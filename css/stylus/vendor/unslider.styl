.unslider
  position relative
  margin 0
  padding 0

.unslider-wrap
  position relative
  overflow auto
  height 100%

.unslider-wrap.unslider-carousel>li
  position relative
  float left
  height 100%
  
  & img
    display block
    width 100%

.unslider li
.unslider ol
.unslider ul
  margin 0
  padding 0
  border 0
  list-style none